<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/bg_card_view"
    >

    <RelativeLayout
        android:id="@+id/item_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <TextView
               android:layout_centerHorizontal="true"
               android:fontFamily="@font/nunito"
               android:textSize="14sp"
               android:id="@+id/tv_vacancy_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="April Smith's CV"/>

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_below="@id/tv_vacancy_title"
                android:layout_centerHorizontal="true"
                android:src="@drawable/vector_docs"
                android:id="@+id/iv_cv_file"
                android:layout_width="35dp"
                android:layout_height="45dp"/>

            <TextView
                android:layout_marginTop="30dp"
                android:layout_below="@id/iv_cv_file"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/nunito"
                android:textSize="14sp"
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17/05/2021"/>


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>