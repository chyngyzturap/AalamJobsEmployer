<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginVertical="5dp"

    android:background="@drawable/bg_card_view"
    >

    <RelativeLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_talent_photo"
                android:layout_marginRight="5dp"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_toEndOf="@+id/iv_talent_photo"
                android:layout_toStartOf="@id/jobs_salary"
                android:id="@+id/talent_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/nunito"
                android:lines="1"
                android:text=""
                android:textColor="#5A5A67"
                android:textSize="20sp" />

            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/jobs_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_talent_favorite"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/nunito_bold"
                android:text=""
                android:textSize="15sp" />


                <TextView
                    android:layout_toEndOf="@id/iv_talent_photo"
                    android:layout_below="@id/talent_full_name"
                    android:layout_marginTop="6dp"
                    android:lines="1"
                    android:id="@+id/talent_position"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/nunito"
                    android:text=""
                    android:textColor="#5A5A67"
                    android:textSize="14sp" />


                <TextView
                    android:layout_toEndOf="@id/iv_talent_photo"
                    android:layout_marginTop="6dp"
                    android:layout_below="@id/talent_position"
                    android:lines="1"
                    android:id="@+id/talent_location"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/nunito"
                    android:text=""
                    android:textColor="#5A5A67"
                    android:textSize="14sp" />


                <TextView
                    android:lines="1"
                    android:layout_marginTop="7dp"
                    android:id="@+id/talent_date"
                    android:textSize="10sp"
                    android:textColor="#F3A683"
                    android:layout_below="@id/jobs_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/nunito"
                    android:text="" />



            <ImageView
                android:id="@+id/iv_talent_favorite"
                android:layout_width="20dp"
                android:src="@drawable/vector_favorite_red_filled"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>